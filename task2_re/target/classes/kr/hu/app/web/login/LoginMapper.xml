<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.hu.app.web.login.LoginMapper">

	<select id="loginUser" parameterType="kr.hu.app.web.login.UserBean" resultType="kr.hu.app.web.login.UserBean">
		SELECT no, name, email, password
      FROM tbl_user
      WHERE 1 = 1
      <if test="no > 0">
     	and no = #{no}
     </if>
	</select>



</mapper>